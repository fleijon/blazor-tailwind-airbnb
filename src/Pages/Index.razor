@page "/"
@using blazor_tailwind_airbnb.Shared.Listings

<PageTitle>Airbnb clone</PageTitle>

@if(emptyListings)
{
    <EmptyState ShowReset />
}
else
{
    <Container>
        <div class="
                    grid
                    grid-cols-1
                    sm:grid-cols-2
                    md:grid-cols-3
                    lg:grid-cols-4
                    xl:grid-cols-5
                    2xl:grid-cols-6
                    gap-8">
            @foreach (var item in Listings!)
            {
                <ListingCard Listing="@item" CurrentUser="@CurrentUser?.Id" />
            }
        </div>
    </Container>
}
