<div
    @onclick="onSelect"
    class="
        group
        flex flex-col
        items-center
        justify-center
        gap-2
        p-3
        border-b-2
        hover:text-neutral-800
        transition
        cursor-pointer
        @selectedBorderCss
        @selectedTextCss"
>
    @Icon
    <div>
        @Label
    </div>
</div>

@code {
    private string selectedBorderCss => Selected ? "border-b-neutral-800" : "border-transparent";
    private string selectedTextCss => Selected ? "text-neutral-800" : "text-neutral-500";
}