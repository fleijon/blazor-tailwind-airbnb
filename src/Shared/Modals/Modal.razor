@if(IsOpen)
{
    <div class="justify-center
                items-center
                flex
                overflow-x-hidden
                overflow-y-auto
                fixed
                inset-0
                z-50
                outline-none
                focus:outline-none
                bg-neutral-800/70">
        <div class="
            relative
            w-full
            md:w-4/6
            lg:w-3/6
            xl:w-2/5
            my-6
            mx-auto
            h-full
            lg:h-auto
            md:h-auto
        "       >
            <div class="
                translate
                duration-300
                h-full
                @translateCss
                @opacityCss
                ">
                <div 
                    class="
                    translate
                    h-full
                    lg:h-auto
                    md:h-auto
                    border-0
                    rounded-lg
                    shadow-lg
                    relative
                    flex
                    flex-col
                    w-full
                    bg-white
                    outline-none
                    focus:outline-none">
                    <div
                        @onclick="HandleOnClose"
                        class="
                        flex
                        items-center
                        p-6
                        rounded-t
                        justify-center
                        relative
                        border-b-[1px]">
                        <button class="
                            p-1
                            border-0
                            hover:opacity-70
                            transition
                            absolute
                            left-9">
                            <CloseIcon width="18" heigth="18" Fill="black" />
                        </button>
                        <div class="text-lg font-semibold">
                            @Label
                        </div>
                    </div>
                    <div class="relative p-6 flex-auto">
                        @Body
                    </div>

                    <div class="flex flex-col gap-2 p-6">
                        <div class="flex flex-row items-center gap-4 w-full">
                            @if(SecondaryLabel != null && SecondaryAction != null)
                            {
                                <Button Disabled=@Disabled Label=@SecondaryLabel Outline="true" OnClick="@((e) => { SecondaryAction?.Invoke(); })" />
                            }
                            <Button Disabled=@Disabled Label=@ActionLabel OnClick="@((e) => { HandleOnSubmit(); })" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string translateCss => showModal ? "translate-y-0" : "translate-y-full";
    private string opacityCss => showModal ? "opacity-100" : "opacity-0";
}